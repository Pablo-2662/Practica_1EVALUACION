<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/estiloReuniones"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#abc4ff">
            <TextView
                android:id="@+id/textoAsunto_reunion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:gravity="center"
                android:text="asunto">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textoFecha_reunion"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:background="#ccdbfd"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:gravity="center"
                android:text="fecha"
                >
            </TextView>
            <TextView
                android:id="@+id/textoHora_reunion"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:background="#ccdbfd"
                android:text="hora"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:gravity="center"
                >
            </TextView>
            <CheckBox
                android:id="@+id/checkbox_asistenciaReunion"
                android:checked="false"
                android:layout_width="match_parent"
                android:background="#b2b2b2"
                android:layout_height="match_parent">
            </CheckBox>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>