<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/vistaGeneralMensajes"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/disenomensaje"
        android:orientation="vertical"
        android:layout_height="120dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="30dp">
            <LinearLayout
                android:layout_width="205dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/textview_correoemisor"
                    android:layout_width="match_parent"
                    android:text="hola"
                    android:textSize="19dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_height="match_parent">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="205dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textoFecha_mensaje"
                    android:gravity="center"
                    android:layout_width="102dp"
                    android:layout_height="match_parent">
                </TextView>
                <TextView
                    android:id="@+id/textoHoramensaje"
                    android:layout_width="102dp"
                    android:gravity="center"
                    android:layout_height="match_parent">
                </TextView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:layout_marginLeft="20dp"
                android:id="@+id/contenidoMensaje"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </TextView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>