<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".CrearPermiso">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:background="#E37E4A">
        <TextView
            android:id="@+id/tituloCrearTarea"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:text="SOLICITAR PERMISO"
            android:gravity="center"
            android:textSize="30dp">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="90dp">
            <EditText
                android:id="@+id/correoUsuario"
                android:layout_width="match_parent"
                android:layout_margin="20dp"
                android:hint="Correo"
                android:layout_height="wrap_content">
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinnerTipoPermiso"
                android:layout_width="match_parent"
                android:spinnerMode="dialog"
                android:layout_height="match_parent">
            </Spinner>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="100dp">
            <TextView
                android:id="@+id/textoFechaInicio"
                android:layout_width="180dp"
                android:textSize="30dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_height="match_parent">
            </TextView>
            <Button
                android:id="@+id/botonSeleccionarFechaInicio"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:text="FECHA INICIO"
                android:gravity="center"
                android:layout_gravity="center"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:textSize="20dp"
                android:backgroundTint="#8B5B42"
                android:textColor="@color/white"
                >
            </Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="100dp">
            <TextView
                android:id="@+id/textoFechaFin"
                android:layout_width="180dp"
                android:textSize="30dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_height="match_parent">
            </TextView>
            <Button
                android:id="@+id/botonSeleccionarFechaFin"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:text="FECHA FIN"
                android:gravity="center"
                android:layout_gravity="center"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:textSize="20dp"
                android:backgroundTint="#8B5B42"
                android:textColor="@color/white"
                >
            </Button>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="120dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/botonBorrarPermiso"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:text="BORRAR"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:layout_gravity="center"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:textSize="20dp"
                android:backgroundTint="#8B5B42"
                android:textColor="@color/white"
                >
            </Button>
            <Button
                android:id="@+id/botonCrearPermiso"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:text="CREAR"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:textSize="20dp"
                android:backgroundTint="#8B5B42"
                android:textColor="@color/white"
                >
            </Button>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>