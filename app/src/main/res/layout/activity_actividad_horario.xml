<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent" tools:context=".ActividadPaginaRegistro" android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:background="#2196F3">
        <TextView
            android:id="@+id/tituloHorario"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/tituloHorario"
            android:gravity="center_vertical"
            android:layout_marginLeft="40dp"
            android:textSize="35sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/horario"
            android:padding="16dp"
            android:shadowColor="#8eb6ed"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="10">
        </TextView>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/etiquetaLunes"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="48dp"
                android:gravity="center"
                android:text="LUNES"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"></TextView>

            <EditText
                android:id="@+id/textoLunes"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="48dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:textSize="15dp"></EditText>

            <TextView
                android:id="@+id/etiquetaMartes"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="48dp"
                android:gravity="center"
                android:text="MARTES"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"></TextView>

            <EditText
                android:id="@+id/textoMartes"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="48dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:textSize="15dp"></EditText>

            <TextView
                android:id="@+id/etiquetaMiercoles"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="48dp"
                android:gravity="center"
                android:text="MIÃ‰RCOLES"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"></TextView>

            <EditText
                android:id="@+id/textoMiercoles"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="48dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:textSize="15dp"></EditText>

            <TextView
                android:id="@+id/etiquetaJueves"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="48dp"
                android:gravity="center"
                android:text="JUEVES"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"></TextView>

            <EditText
                android:id="@+id/textJueves"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="48dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:textSize="15dp"></EditText>

            <TextView
                android:id="@+id/etiquetaViernes"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="48dp"
                android:gravity="center"
                android:text="VIERNES"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"></TextView>

            <EditText
                android:id="@+id/textViernes"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="48dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:textSize="15dp"></EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/botonReunionH"
                        android:backgroundTint="#AED6F1"
                        style="@style/Widget.Material3.Button.ElevatedButton"
                        android:textSize="16dp"
                        android:text="REUNIONES"
                        android:textStyle="bold"
                        android:textColor="#2196F3"
                        android:layout_width="140dp"
                        android:layout_height="match_parent">
                    </Button>
                    <TextView
                        android:id="@+id/numeroReuniones"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textSize="30dp"
                        android:textColor="@color/black">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/botonGuardiasH"
                        android:backgroundTint="#AED6F1"
                        style="@style/Widget.Material3.Button.ElevatedButton"
                        android:textSize="16dp"
                        android:text="GUARDIAS"
                        android:textStyle="bold"
                        android:textColor="#2196F3"
                        android:layout_width="140dp"
                        android:layout_height="match_parent">
                    </Button>
                    <TextView
                        android:id="@+id/numeroGuardias"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textSize="30dp"
                        android:textColor="@color/black">
                    </TextView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <Button
                    android:id="@+id/guardarHorario"
                    android:layout_width="match_parent"
                    android:backgroundTint="#AED6F1"
                    style="@style/Widget.Material3.Button.ElevatedButton"
                    android:textSize="16dp"
                    android:layout_marginRight="20dp"
                    android:text="GUARDAR"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textColor="#2196F3"
                    android:layout_height="wrap_content">
                </Button>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:background="#2196F3"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/botonVolverPantallaHorario"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:backgroundTint="#FF8080"
            android:text="@string/textoVolver"
            >
        </Button>
        <Button
            android:id="@+id/boton_EditarHorario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:textSize="20dp"
            android:layout_marginLeft="30dp"
            android:textColor="@color/white"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:text="EDITAR">
        </Button>

    </LinearLayout>
</LinearLayout>