<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/layout_registro"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActividadPaginaRegistro"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:background="#2196F3">
        <TextView
            android:id="@+id/tituloRegistro"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/tituloRegistro"
            android:gravity="center_vertical"
            android:layout_marginLeft="40dp"
            android:textSize="35sp"
            android:background="#96B6C5"
            android:textColor="#E0E0E0"
            android:textStyle="bold"
            android:padding="16dp"
            android:shadowColor="#8eb6ed"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="10">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textinput_nombreRegistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:endIconMode="clear_text"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            app:boxCornerRadiusBottomEnd="40dp"
            app:boxCornerRadiusBottomStart="40dp"
            app:boxCornerRadiusTopEnd="40dp"
            app:boxCornerRadiusTopStart="40dp"
            app:counterMaxLength="30"
            app:counterEnabled="true"
            app:helperText="Nombre y apellido"
            android:hint="NOMBRE">
            <EditText
                android:id="@+id/textoNombreRegistro"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text">
            </EditText>
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textinput_contrasenaRegistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            app:boxCornerRadiusBottomEnd="40dp"
            app:boxCornerRadiusBottomStart="40dp"
            app:boxCornerRadiusTopEnd="40dp"
            app:endIconMode="password_toggle"
            app:boxCornerRadiusTopStart="40dp"
            android:layout_marginTop="20dp"
            app:counterMaxLength="10"
            app:counterEnabled="true"
            android:hint="CONTRASEÑA">
            <EditText
                android:id="@+id/textoContrasenyaRegistro"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPassword">
            </EditText>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textinput_emailRegistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            app:boxCornerRadiusBottomEnd="40dp"
            app:boxCornerRadiusBottomStart="40dp"
            app:boxCornerRadiusTopEnd="40dp"
            app:endIconMode="clear_text"
            app:boxCornerRadiusTopStart="40dp"
            android:layout_marginTop="20dp"
            app:counterMaxLength="30"
            app:counterEnabled="true"
            android:hint="EMAIL">
            <EditText
                android:id="@+id/textoEmailRegistro"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text">
            </EditText>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textinput_telefonoRegistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            app:boxCornerRadiusBottomEnd="40dp"
            app:boxCornerRadiusBottomStart="40dp"
            app:endIconMode="clear_text"
            app:boxCornerRadiusTopEnd="40dp"
            app:boxCornerRadiusTopStart="40dp"
            android:layout_marginTop="20dp"
            app:counterMaxLength="9"
            app:counterEnabled="true"
            android:hint="TELÉFONO">
            <EditText
                android:id="@+id/textoTelefonoRegistro"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="number">
            </EditText>
        </com.google.android.material.textfield.TextInputLayout>



        <RadioGroup
            android:id="@+id/SelectorPuestoTrabajo"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_height="39dp"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/opcionDocente"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:checked="true"
                android:text="Docente"></RadioButton>

            <RadioButton
                android:id="@+id/opcionCoordinador"
                android:layout_width="115dp"
                android:layout_height="match_parent"
                android:layout_marginRight="8dp"
                android:checked="false"
                android:text="Coordinador"
                ></RadioButton>

            <RadioButton
                android:id="@+id/opcionJefeEstudios"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="8dp"
                android:checked="false"
                android:text="Jefe de estudios"
                ></RadioButton>


        </RadioGroup>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:background="#96B6C5"
        android:gravity="center">

        <Button
            android:id="@+id/botonVolverPantallaRegistro"
            android:layout_width="wrap_content"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF8080"
            android:text="@string/textoVolver"
            android:layout_marginRight="30dp"></Button>
        <Button
            android:id="@+id/botonCompletarRegistro"
            android:layout_width="120dp"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#2196F3"
            android:text="@string/textoCompletarRegistro"
            tools:ignore="DuplicateIds"></Button>
    </LinearLayout>
</LinearLayout>