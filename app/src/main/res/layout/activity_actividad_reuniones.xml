<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActividadPaginaRegistro">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.8"
        android:background="#2196F3">

        <TextView
            android:id="@+id/tituloReuniones"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#96B6C5"
            android:gravity="center_vertical"
            android:layout_marginLeft="40dp"
            android:padding="16dp"
            android:text="@string/tituloReuniones"
            android:textColor="#E0E0E0"
            android:textSize="35sp"
            android:textStyle="bold"
            android:shadowColor="#8eb6ed"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="10" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="top"
        android:orientation="vertical">



            <ListView
                android:id="@+id/listview_reuniones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </ListView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/botonCrearReunion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:backgroundTint="#8eb6ed"
            android:text="@string/crearReunion" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:background="#96B6C5"
        android:gravity="center">


        <Button
            android:id="@+id/botonVolverPantallaReuniones"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF8080"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:text="@string/textoVolver" />
        <Button
            android:id="@+id/botonActualizarReuniones"
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:backgroundTint="#2196F3"
            android:text="@string/textoActualizar" />
    </LinearLayout>
</LinearLayout>
